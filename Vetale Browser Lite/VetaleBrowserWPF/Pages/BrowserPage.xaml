<UserControl x:Class="VetaleBrowserWPF.Pages.BrowserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VetaleBrowserWPF.Controls"
             Background="#FF9800">
    
    <UserControl.Resources>
        <!-- Футуристичний сірий градієнт -->
        <LinearGradientBrush x:Key="GrayGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE0E0E0" Offset="0"/>
            <GradientStop Color="#FFD0D0D0" Offset="0.3"/>
            <GradientStop Color="#FFC5C5C5" Offset="0.7"/>
            <GradientStop Color="#FFC0C0C0" Offset="1"/>
        </LinearGradientBrush>

        <!-- New Window Button Gradient -->
        <LinearGradientBrush x:Key="NewWindowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF6B00" Offset="0"/>
            <GradientStop Color="#FFFF8C00" Offset="0.3"/>
            <GradientStop Color="#FF9B30FF" Offset="0.7"/>
            <GradientStop Color="#FF8A2BE2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Add Tab Button Style -->
        <Style x:Key="AddTabButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- New Window Button Style -->
        <Style x:Key="NewWindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="{StaticResource NewWindowGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Window Control Button Style -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#303030"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top row: Tab Bar with Window Controls -->
        <Grid Grid.Row="0" Background="{StaticResource GrayGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left area - Tabs -->
            <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Top" 
                       Margin="8,4,0,0">
                
                <!-- Add Tab Button -->
                <Button x:Name="AddTabButton"
                        Style="{StaticResource AddTabButtonStyle}"
                        ToolTip="Нова вкладка">
                    <Image Source="pack://application:,,,/Resources/Icons/AddTab.png"
                           Stretch="UniformToFill"/>
                </Button>

                <!-- New Window Button -->
                <Button x:Name="NewWindowButton"
                        Style="{StaticResource NewWindowButtonStyle}"
                        ToolTip="Нове вікно">
                    <Viewbox Width="20" Height="20">
                        <Canvas Width="24" Height="24">
                            <!-- Window icon with plus -->
                            <Rectangle Width="16" Height="12" 
                                     Canvas.Left="2" Canvas.Top="6" 
                                     Stroke="White" StrokeThickness="2" 
                                     Fill="Transparent" 
                                     RadiusX="1" RadiusY="1"/>
                            <Line X1="18" Y1="4" X2="18" Y2="12" 
                                  Stroke="White" StrokeThickness="2.5"/>
                            <Line X1="14" Y1="8" X2="22" Y2="8" 
                                  Stroke="White" StrokeThickness="2.5"/>
                        </Canvas>
                    </Viewbox>
                </Button>

                <!-- Тут будуть додаватися вкладки динамічно -->
                <!-- Приклад однієї вкладки: -->
                <!--
                <controls:TabControl/>
                -->
            </StackPanel>

            <!-- Right area - Window Controls -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Top"
                       Margin="0,7,8,0">
                
                <!-- Minimize Button -->
                <Button x:Name="MinimizeButton"
                        Style="{StaticResource WindowControlButton}"
                        Content="&#xE921;"
                        ToolTip="Згорнути"/>

                <!-- Maximize/Restore Button -->
                <Button x:Name="MaximizeButton"
                        Style="{StaticResource WindowControlButton}"
                        Content="&#xE922;"
                        ToolTip="Розгорнути"/>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Style="{StaticResource WindowControlButton}"
                        Content="&#xE8BB;"
                        ToolTip="Закрити">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
                            <Setter Property="Foreground" Value="#FF000000"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#40FF5C5C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Navigation Bar -->
        <controls:NavigationBar Grid.Row="1"/>

        <!-- Web Content Area -->
        <Grid Grid.Row="2" Background="White" Margin="4">
            <!-- Тут буде відображатися веб-контент -->
            <Border Background="#F5F5F5" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <TextBlock Text="Веб-контент тут" 
                          FontSize="18" 
                          Foreground="#999"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>

