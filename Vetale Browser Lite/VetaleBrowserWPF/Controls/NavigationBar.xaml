<UserControl x:Class="VetaleBrowserWPF.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="36">
    
    <UserControl.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Background" Value="#FF6D00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Stretch" 
                                            VerticalAlignment="Stretch"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8800"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF5500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style (Home, Tools, Settings) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#20A78BFA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Stretch" 
                                            VerticalAlignment="Stretch"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#30FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Address Bar Style -->
        <Style x:Key="AddressBarStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F3E8FF"/>
            <Setter Property="Foreground" Value="#4C1D95"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#C4B5FD"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#A78BFA"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="Transparent" Padding="8,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    x:Name="BackButton"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Назад">
                <Image Source="pack://application:,,,/Resources/Icons/Backbutton.png"
                       Stretch="UniformToFill"/>
            </Button>

            <!-- Forward Button -->
            <Button Grid.Column="1"
                    x:Name="ForwardButton"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Вперед">
                <Image Source="pack://application:,,,/Resources/Icons/ForwardButton.png"
                       Stretch="UniformToFill"/>
            </Button>

            <!-- Reload Button -->
            <Button Grid.Column="2"
                    x:Name="ReloadButton"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Оновити">
                <Image Source="pack://application:,,,/Resources/Icons/ReloadTabButton.png"
                       Stretch="UniformToFill"/>
            </Button>

            <!-- Home Button -->
            <Button Grid.Column="3"
                    x:Name="HomeButton"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="0,0,8,0"
                    ToolTip="Домівка">
                <Image Source="pack://application:,,,/Resources/Icons/HomeButton.png"
                       Stretch="UniformToFill"/>
            </Button>

            <!-- Address Bar Container -->
            <Border Grid.Column="4"
                    Background="#F3E8FF"
                    CornerRadius="18"
                    Margin="0,0,8,0"
                    BorderThickness="1"
                    BorderBrush="#C4B5FD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Security Status Icon -->
                    <Border Grid.Column="0"
                            Width="20"
                            Height="20"
                            Margin="12,0,4,0"
                            ToolTip="Статус безпеки">
                        <!-- Green Shield Icon for Safe Status -->
                        <Path x:Name="SecurityIcon"
                              Width="12"
                              Height="12"
                              Fill="#4CAF50"
                              Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"
                              Stretch="Uniform"/>
                    </Border>

                    <!-- Security Status Text -->
                    <TextBlock Grid.Column="1"
                               x:Name="SecurityText"
                               Text="Статус: невідомо"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Foreground="#4C1D95"/>

                    <!-- URL TextBox -->
                    <TextBox Grid.Column="2"
                             x:Name="AddressBar"
                             Style="{StaticResource AddressBarStyle}"
                             Text="https://"
                             BorderThickness="0"
                             Background="Transparent"/>

                    <!-- Bookmark/Star Button -->
                    <Button Grid.Column="3"
                            x:Name="BookmarkButton"
                            Width="28"
                            Height="28"
                            Margin="4,0,8,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Додати закладку">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Source="pack://application:,,,/Resources/Icons/AddBookmarkButton.png"
                               Stretch="UniformToFill"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Tools Button -->
            <Button Grid.Column="5"
                    x:Name="ToolsButton"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="0,0,4,0"
                    ToolTip="Інструменти">
                <Image Source="pack://application:,,,/Resources/Icons/InstrumensButton.png"
                       Stretch="UniformToFill"/>
            </Button>

            <!-- Settings Button -->
            <Button Grid.Column="6"
                    x:Name="SettingsButton"
                    Style="{StaticResource IconButtonStyle}"
                    ToolTip="Налаштування">
                <Image Source="pack://application:,,,/Resources/Icons/SettingsButton.png"
                       Stretch="UniformToFill"/>
            </Button>
        </Grid>
    </Border>
</UserControl>

