<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Градієнти -->
    <LinearGradientBrush x:Key="GrayGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFE0E0E0" Offset="0"/>
        <GradientStop Color="#FFD0D0D0" Offset="0.3"/>
        <GradientStop Color="#FFC5C5C5" Offset="0.7"/>
        <GradientStop Color="#FFC0C0C0" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFA020F0" Offset="0"/>
        <GradientStop Color="#FF9A1CE8" Offset="0.3"/>
        <GradientStop Color="#FF8E15DC" Offset="0.7"/>
        <GradientStop Color="#FF8612D0" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFF6B00" Offset="0"/>
        <GradientStop Color="#FFFF8C00" Offset="0.3"/>
        <GradientStop Color="#FF9B30FF" Offset="0.7"/>
        <GradientStop Color="#FF8A2BE2" Offset="1"/>
    </LinearGradientBrush>

    <!-- Активна вкладка градієнт -->
    <LinearGradientBrush x:Key="ActiveTabGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#DDD6FE" Offset="0"/>
        <GradientStop Color="#C4B5FD" Offset="1"/>
    </LinearGradientBrush>

    <!-- Неактивна вкладка градієнт -->
    <LinearGradientBrush x:Key="InactiveTabGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F3F4F6" Offset="0"/>
        <GradientStop Color="#E5E7EB" Offset="1"/>
    </LinearGradientBrush>

    <!-- Hover вкладка градієнт -->
    <LinearGradientBrush x:Key="HoverTabGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FAF9FF" Offset="0"/>
        <GradientStop Color="#F3F1FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Кольори -->
    <SolidColorBrush x:Key="NavigationButtonBackground" Color="#FF6D00"/>
    <SolidColorBrush x:Key="NavigationButtonHover" Color="#FF8800"/>
    <SolidColorBrush x:Key="NavigationButtonPressed" Color="#FF5500"/>
    
    <SolidColorBrush x:Key="IconButtonBackground" Color="#20A78BFA"/>
    <SolidColorBrush x:Key="IconButtonHover" Color="#50FFFFFF"/>
    <SolidColorBrush x:Key="IconButtonPressed" Color="#30FFFFFF"/>

    <SolidColorBrush x:Key="AddressBarBackground" Color="#F3E8FF"/>
    <SolidColorBrush x:Key="AddressBarForeground" Color="#4C1D95"/>
    <SolidColorBrush x:Key="AddressBarBorder" Color="#C4B5FD"/>
    <SolidColorBrush x:Key="AddressBarFocusBorder" Color="#A78BFA"/>

    <SolidColorBrush x:Key="TabTitleColor" Color="#D84315"/>
    <SolidColorBrush x:Key="TabIconBackground" Color="#A78BFA"/>
    <SolidColorBrush x:Key="TabBorder" Color="#A78BFA"/>

    <!-- Стилі кнопок -->
    
    <!-- Кнопка навігації (Назад, Вперед, Оновити) -->
    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="Background" Value="{StaticResource NavigationButtonBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource NavigationButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource NavigationButtonPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Кнопка іконки (Домівка, Інструменти, Налаштування) -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="{StaticResource IconButtonBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource IconButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource IconButtonPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Кнопка закриття вікна -->
    <Style x:Key="WindowCloseButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#40FF5C5C"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Кнопка мінімізації/максимізації вікна -->
    <Style x:Key="WindowControlButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#303030"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#40FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль адресної строки -->
    <Style x:Key="AddressBarStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource AddressBarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource AddressBarForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource AddressBarFocusBorder}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>

