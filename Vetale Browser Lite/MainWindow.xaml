<Window x:Class="Vetale_Browser_Lite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:properties="clr-namespace:Vetale_Browser_Lite.Properties"
        xmlns:wpf="clr-namespace:Vetale_Browser_Lite.Wpf"
        Title="Vetale Browser Lite"
        Width="1200" Height="800"
        MinHeight="320" MinWidth="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Gradients -->
        <LinearGradientBrush x:Key="GrayGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE0E0E0" Offset="0"/>
            <GradientStop Color="#FFD0D0D0" Offset="0.3"/>
            <GradientStop Color="#FFC5C5C5" Offset="0.7"/>
            <GradientStop Color="#FFC0C0C0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFA020F0" Offset="0"/>
            <GradientStop Color="#FF9A1CE8" Offset="0.3"/>
            <GradientStop Color="#FF8E15DC" Offset="0.7"/>
            <GradientStop Color="#FF8612D0" Offset="1"/>
        </LinearGradientBrush>

        <!-- Colors -->
        <SolidColorBrush x:Key="NavigationButtonBackground" Color="#FF6D00"/>
        <SolidColorBrush x:Key="NavigationButtonHover" Color="#FF8800"/>
        <SolidColorBrush x:Key="IconButtonBackground" Color="#20A78BFA"/>
        <SolidColorBrush x:Key="IconButtonHover" Color="#50FFFFFF"/>
        <SolidColorBrush x:Key="AddressBarBackground" Color="#F3E8FF"/>
        <SolidColorBrush x:Key="AddressBarForeground" Color="#4C1D95"/>
        <SolidColorBrush x:Key="AddressBarFocusBorder" Color="#A78BFA"/>

        <!-- Button Styles -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Background" Value="{StaticResource NavigationButtonBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                Padding="6" SnapsToDevicePixels="True">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                   Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource NavigationButtonHover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <wpf:GdiBitmapToImageSourceConverter x:Key="GdiBitmapToImageSourceConverter" />

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="8" SnapsToDevicePixels="True">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                   Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FF5C5C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddressBarStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource AddressBarBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource AddressBarForeground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AddressBarFocusBorder}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#30000000" BorderThickness="1" CornerRadius="10" Background="{StaticResource GrayGradient}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="56"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="Transparent" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <TextBlock Text="Vetale Browser Lite" 
                                   Foreground="#303030" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" 
                                   Margin="16,0,0,0"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="MinimizeButton" 
                                Tag="pack://application:,,,/Icons/MinButton.png"
                                Click="MinimizeButton_Click"
                                Style="{StaticResource WindowControlButtonStyle}"/>
                        <Button x:Name="MaximizeRestoreButton" 
                                Tag="pack://application:,,,/Icons/MaxButton.png"
                                Click="MaximizeButton_Click"
                                Style="{StaticResource WindowControlButtonStyle}"/>
                        <Button x:Name="CloseButton" 
                                Tag="pack://application:,,,/Icons/CloseButton.png"
                                Click="CloseButton_Click"
                                Style="{StaticResource WindowCloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Navigation Bar -->
            <Border Grid.Row="1" Background="{StaticResource PurpleGradient}" BorderBrush="#30000000" BorderThickness="0,1,0,1" Margin="8,0">
                <Grid Margin="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BackButton" 
                            Tag="pack://application:,,,/Icons/Backbutton.png"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="ForwardButton" Grid.Column="1"
                            Tag="pack://application:,,,/Icons/ForwardButton.png"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="RefreshButton" Grid.Column="2"
                            Tag="pack://application:,,,/Icons/ReloadTabButton.png"
                            Style="{StaticResource NavigationButtonStyle}"/>

                    <TextBox x:Name="AddressBar" Grid.Column="4" 
                             Style="{StaticResource AddressBarStyle}"/>

                    <Button x:Name="GoButton" Grid.Column="5" 
                            Content="→" 
                            Width="60" Height="40"
                            Margin="8,0,0,0"
                            Background="White"
                            Foreground="#7C3AED"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F3FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Browser Content -->
            <Border Grid.Row="2" Background="White" CornerRadius="0,0,10,10" Margin="8,0,8,8" ClipToBounds="True">
                <cefSharp:ChromiumWebBrowser x:Name="Browser"/>
            </Border>
        </Grid>
    </Border>
</Window>
